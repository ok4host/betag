# BeTaj Real Estate - Apache Configuration

# Enable Rewrite Engine
RewriteEngine On

# Force HTTPS (uncomment in production)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Property detail page
RewriteRule ^property/([a-zA-Z0-9-]+)/?$ pages/property.php?slug=$1 [L,QSA]

# Search with filters
RewriteRule ^search/?$ pages/search.php [L,QSA]
RewriteRule ^sale/?$ pages/search.php?type=sale [L,QSA]
RewriteRule ^rent/?$ pages/search.php?type=rent [L,QSA]

# Location pages
RewriteRule ^location/([a-zA-Z0-9-]+)/?$ pages/search.php?location=$1 [L,QSA]

# Category pages
RewriteRule ^category/([a-zA-Z0-9-]+)/?$ pages/search.php?category=$1 [L,QSA]

# Static pages
RewriteRule ^compounds/?$ pages/compounds.php [L]
RewriteRule ^new-projects/?$ pages/new-projects.php [L]
RewriteRule ^about/?$ pages/about.php [L]
RewriteRule ^contact/?$ pages/contact.php [L]
RewriteRule ^privacy/?$ pages/privacy.php [L]
RewriteRule ^terms/?$ pages/terms.php [L]

# API endpoints
RewriteRule ^api/leads/?$ api/leads.php [L]
RewriteRule ^api/properties/?$ api/properties.php [L]

# Prevent directory listing
Options -Indexes

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>

# Compress text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json
</IfModule>

# Block sensitive files
<FilesMatch "(^\.ht|config\.php|schema\.sql)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Error pages
ErrorDocument 404 /pages/404.php
ErrorDocument 500 /pages/500.php
